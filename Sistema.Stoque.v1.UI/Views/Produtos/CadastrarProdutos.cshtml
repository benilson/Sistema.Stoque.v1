@model Sistema.Stoque.v1.Dominio.Produtos

@{
    ViewBag.Title = "Cadastrar Produtos";
}

<h2>Cadastrar Produtos</h2>

@using (Html.BeginForm("CadastrarProdutos", "Produtos", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Produtos</h4>
        <hr />

        <span style="color:red;">@ViewBag.Erro</span>
        <div class="form-group">
            @Html.LabelFor(model => model.Imagem)

                <input type="file" name="file" class="form-control" />

        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.NomeProduto)

                @Html.EditorFor(model => model.NomeProduto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomeProduto, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">
            <select name="catregoria" class="form-control">
                <option selected value="">Categoria</option>
                <option value="Higiene">Higiene</option>
                <option value="Escritorio">Escritorio</option>
                <option value="Consumo">Consumo</option>
                <option value="Suprimentos">Suprimentos</option>
                <option value="Eletronicos">Eletronicos</option>
            </select>
         </div>

            <div class="form-group">

                <input type="submit" value="Salvar" class="btn btn-default" />

            </div>
        </div>
}

<div>
    @Html.ActionLink("Lista de Produtos", "Listarprodutos")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
