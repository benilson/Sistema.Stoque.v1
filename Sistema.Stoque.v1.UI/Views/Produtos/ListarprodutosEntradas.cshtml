@model IEnumerable<Sistema.Stoque.v1.Dominio.Entradas>

@{
    ViewBag.Title = "Listar produtos Entradas";
}
<br />
<br />
<br />
<h2>Entradas do Seguinte Produto</h2>

<div class="row">
    <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
            <a href="#" class="thumbnail">
                <img src='@Url.Content("~/ImgProdutos/" + @ViewBag.Imagem)' alt="" /><br />
            </a>
            <div class="caption">
                <b>Quantidade Atual :</b>@ViewBag.Quantidadeatual
                <p>
                    @Html.ActionLink("Cadastrar Entradas de Produtos", "AumentarProdutos", new { id = @ViewBag.idProduto }, new { @class = "btn btn-primary btn-sm" })
                </p>
             </div>
       </div>
  </div>
</div>

<br />
<table class="table table-striped table-hover">
    <thead>
        <tr style="background-color:#B30F20; color:white">
            <th>
                Data Entrada
            </th>
            <th>
                Hora Entrada
            </th>  
            <th>
                Nome Usuario
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
               Preço
            </th>
            <th>
                Nome do Produto
            </th>
            <th>
                Data da Saida
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataEntrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraEntrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeProduto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataEntrada)
                </td>
                <td>
                    @Html.ActionLink("Editar", "EditarProdutoEntrada", new { id = item.Id_EntradaProd }, new { @class = "btn btn-info btn-xs" })
                </td>
            </tr>
        }
    </tbody>
</table>
