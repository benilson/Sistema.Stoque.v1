@model Sistema.Stoque.v1.Dominio.Produtos


@using (Html.BeginForm("AumentarProdutos", "Produtos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Aumentar Produtos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <img src='@Url.Content("~/ImgProdutos/" + Model.Imagem)' alt="" width="100" height="100" /><br />
            <b>Quantidade Atual :</b>@String.Format("{0:#,###.##}", @ViewBag.Quantidadeatual)<br />


        @Html.HiddenFor(model => model.Id_produto)
            <p style="color:red">@ViewBag.Erro</p>

            <div class="form-group">
                <b>Alterar imagem</b>
                <input type="file" name="file" class="form-control" />
              </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NomeProduto)
               
                        @Html.EditorFor(model => model.NomeProduto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NomeProduto, "", new { @class = "text-danger" })
           
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Quantidade)
              
                        @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
                   
                </div>



                @Html.HiddenFor(model => model.Imagem)


                <div class="form-group">                  
                        <input type="submit" value="Salvar" class="btn btn-default" />
                </div>
            </div>
  </div>
}

<div>
    @Html.ActionLink("Voltar", "listarprodutos")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
