@model Sistema.Stoque.v1.Dominio.Usuario

@{
    ViewBag.Title = "Criar";
}

<h2>Criar Usuario</h2>


@using (Html.BeginForm("Criar", "Usuario", FormMethod.Post, new { enctype ="multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Usuario</h4>
        <hr />
        <div class="form-group">
           <b>Foto</b> 
            <input type="file" name="file" class="form-control" />
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.NomeCompleto)

            @Html.EditorFor(model => model.NomeCompleto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NomeCompleto, "", new { @class = "text-danger" })

        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           
        <div class="form-group">
            @Html.LabelFor(model => model.NomeUsuario)
 
                @Html.EditorFor(model => model.NomeUsuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomeUsuario, "", new { @class = "text-danger" })
   
        </div>

        <div class="form-group">
            <b>Perfil</b>
            <select name="perfil" class="form-control">
                <option value="Admin">Admin</option>
                <option value="usuarioCadastro">Usuario Cadastro</option>
                <option value="usuarioSaida">Usuario Saida</option>
            </select>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.telfUsuario)
 
                @Html.EditorFor(model => model.telfUsuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.telfUsuario, "", new { @class = "text-danger" })
       
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SenhaUsuario)
      
                @Html.PasswordFor(model => model.SenhaUsuario, new {  @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.SenhaUsuario, "", new { @class = "text-danger" })
      
        </div>

        <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
